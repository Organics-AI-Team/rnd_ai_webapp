{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "chromadb-service/Dockerfile",
    "watchPatterns": [
      "chromadb-service/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/v1/heartbeat",
    "healthcheckTimeout": 300,
    "sleepBeforeHealthcheck": 10,
    "startCommand": "chroma run --host 0.0.0.0 --port 8000 --path /chroma/data"
  }
}
